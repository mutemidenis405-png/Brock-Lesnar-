name: Monster APK Build

# Manual trigger or push to main
on:
  push:
    branches:
      - main
  workflow_dispatch:

jobs:
  setup-and-build:
    runs-on: ubuntu-latest

    steps:
      # 1. Checkout repo
      - name: Checkout repo
        uses: actions/checkout@v3

      # 2. Ensure all folders exist
      - name: Create folder structure
        run: |
          mkdir -p .github/workflows
          touch .github/workflows/.gitkeep

          mkdir -p gradle/wrapper
          touch gradle/wrapper/.gitkeep

          mkdir -p app/src/main/java/com/monster/study
          touch app/src/main/java/com/monster/study/.gitkeep

          mkdir -p app/src/main/assets
          touch app/src/main/assets/.gitkeep

          mkdir -p app/src/main/res/layout
          touch app/src/main/res/layout/.gitkeep

          mkdir -p app/src/main/res/drawable
          touch app/src/main/res/drawable/.gitkeep

          mkdir -p app/src/main/res/values
          touch app/src/main/res/values/.gitkeep

          mkdir -p app/src/main/res/raw
          touch app/src/main/res/raw/.gitkeep

          mkdir -p libs
          touch libs/.gitkeep

      # 3. Make gradlew executable
      - name: Make Gradle Wrapper executable
        run: chmod +x ./gradlew

      # 4. Build APK
      - name: Build APK
        run: ./gradlew assembleDebug

      # 5. Upload APK as artifact
      - name: Upload APK
        uses: actions/upload-artifact@v3
        with:
          name: app-debug-apk
          path: app/build/outputs/apk/debug/app-debug.apk
